{
    "name": "live-time-record",
    "manifest_version":2,
    "version": "1.0.0",
    "description": "a little demo",
    "author":"mozlilove",
    "icons":{
        "16":"./img/icon.png",
        "48":"./img/icon.png",
        "128":"./img/icon.png"
    },
    "background":{
        "scripts":["./js/Record.js"]
    },
    "browser_action":
    {
        "default_icon":"./img/icon.png",
        "default_title":"这是一个记录插件",
        "default_popup": "popup.html"
    },
    "permissions":[
        "notifications",
        "storage",
        "tabs",
        "https://*/*"
    ],
    "web_accessible_resources": ["./js/Record.js"],
    "homepage_url": "https://www.baidu.com",
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["./js/pageRecord.js"],
            "run_at":"document_start"
        }
    ]
  }
  